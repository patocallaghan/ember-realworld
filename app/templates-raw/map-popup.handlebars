<div class="avatar__container o__l">
  <div class="avatar o__l o__contained">
    <img class="avatar__media" src="{{avatar.image_urls.normal}}" style="position:absolute;z-index:1;">
    <span class="avatar__media" style="background-color: #{{avatar.color}};">
      {{avatar.initials}}
    </span>
  </div>
  <div style="position:relative;top:5px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;padding-right:15px;">
    <h3 style="margin:0;">
      <a href="/a/apps/{{app_id}}/users/{{id}}">
        {{display_as}}
      </a>
    </h3>
    <p style="margin:0;font-size:13px;opacity:0.5;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">
      {{geoip_data.city_name}}{{#if geoip_data.city_name}},{{/if}} {{geoip_data.country_name}}
    </p>
  </div>
</div>
